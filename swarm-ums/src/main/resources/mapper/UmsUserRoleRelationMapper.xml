<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yangzm.ums.mapper.UmsUserRoleRelationMapper">

    <resultMap id="BaseResultMap" type="com.yangzm.domain.UmsUserRoleRelation">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="roleId" column="role_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,role_id
    </sql>
    <select id="getRoleListByUserId" resultType="com.yangzm.domain.UmsRole">
        select r.*
        from ums_user_role_relation ur left join ums_role r on ar.role_id = r.id
        where ar.user_id = #{userId}
    </select>
</mapper>
